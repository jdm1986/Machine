@model Machine.Models.MachineViewModel
@{
    bool isEditMode = Model.MachineId != null;
    ViewBag.Title = (isEditMode)? "Edit " + Model.MachineMakeModel : "Add Machine" ;
}

<h2>@Model.MachineMakeModel</h2>


@*//would like to sort on availability, also possibly change color of row based on availability*@

<div class="row">
    <div class="col-sm-3 col-xs-5">
        @using (Html.BeginForm((isEditMode)? "EditMachine" : "AddMachine", "Machine"))
        {
            @Html.HiddenFor(m => m.MachineId)
        <div class="form-group">
            @Html.LabelFor(m => m.MachineNum)
            @Html.TextBoxFor(m => m.MachineNum, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MachineMake)
            @Html.TextBoxFor(m => m.MachineMake, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MachineModel)
            @Html.TextBoxFor(m => m.MachineModel, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.TypeId)
            @Html.DropDownListFor(m => m.TypeId,
           new SelectList(
               new List<Object> {
               new { value = 0 , text = "Dozer"},
               new { value = 1 , text = "Excavator"},
               new { value = 2 , text = "Tractor"}
               },
               "value",
               "text",
               Model.TypeId
               )
               )
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Hours)
            @Html.TextBoxFor(m => m.Hours, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Notes)
            @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Status)
            <div class="rentcheck">
                @Html.CheckBoxFor(m => m.Status, new { @class = "form-control" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary">@((isEditMode)? "Save" : "Add")</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>